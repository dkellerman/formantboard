{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "*": ["./src/*"]
    },
    "types": [
      "vite/client"
    ],
  },
  "include": [
    "src/main.tsx",
    "src/react/**/*.ts",
    "src/react/**/*.tsx",
    "src/utils.ts",
    "src/wasm.ts",
    "src/vite-env.d.ts",
    "src/test/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
